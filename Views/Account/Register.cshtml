@model ASM_00357.Models.Customer
@{
    ViewData["Title"] = "Đăng ký";
}
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow" style="width: 400px;">
        <h4 class="text-center text-success mb-3">Tạo tài khoản mới</h4>
        <form asp-action="Register" method="post">
            <div class="form-group mb-2">
                <input asp-for="FullName" class="form-control" placeholder="Họ và tên" />
            </div>
            <div class="form-group mb-2">
                <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
            </div>
            <div class="form-group mb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
            </div>
            <div class="form-group mb-2">
                <input asp-for="Email" class="form-control" placeholder="Email" />
            </div>
            <div class="form-group mb-2">
                <input asp-for="Address" class="form-control" placeholder="Địa chỉ" />
            </div>
            <button type="submit" class="btn btn-success w-100">Đăng ký</button>
        </form>
        <div class="text-center mt-2">
            <a asp-action="Login">Bạn đã có tài khoản?</a>
        </div>
    </div>
</div>
