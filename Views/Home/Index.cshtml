    @model IEnumerable<ASM_00357.Models.Product>

    @{
        ViewData["Title"] = "Trang chủ";
    }
    <!-- 🔁 Carousel quảng bá -->
    <div id="promoCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-inner rounded">
            <div class="carousel-item active">
                <img src="/images/bn1.jpg" class="d-block w-100" style="height:350px; object-fit:cover;" alt="Promo 1">
            </div>
            <div class="carousel-item">
            <img src="/images/bn2.jpg" class="d-block w-100" style="height:350px; object-fit:cover;" alt="Promo 2">
            </div>
            <div class="carousel-item">
            <img src="/images/bn3.jpg" class="d-block w-100" style="height:350px; object-fit:cover;" alt="Promo 3">
            </div>
        </div>

        <!-- Nút chuyển -->
        <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>

    

<form asp-controller="Home" asp-action="Index" method="get" class="mb-4">
    <div class="input-group w-50 mx-auto">
        <input type="text" name="searchString" class="form-control" placeholder="Nhập tên sản phẩm..." />
        <button class="btn btn-primary" type="submit">Tìm kiếm</button>
    </div>
</form>

<h2 class="mb-4">Sản phẩm nổi bật</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">

                <!-- ✅ Ảnh có link tới chi tiết -->
                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId">
                    <img src="~/images/@item.ImageUrl" class="card-img-top" style="height:auto; object-fit:cover;" />
                </a>

                <div class="card-body d-flex flex-column">
                    <!-- ✅ Tên cũng có link tới chi tiết -->
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="text-decoration-none text-dark">
                        <h5 class="card-title">@item.Name</h5>
                    </a>

                    <p class="card-text text-danger">Giá: @item.Price.ToString("N0") đ</p>

                    <!-- ✅ Nút Thêm vào giỏ -->
                    <a class="btn btn-sm btn-outline-primary mt-auto"
                       asp-controller="Cart"
                       asp-action="AddToCart"
                       asp-route-productId="@item.ProductId">Thêm vào giỏ</a>
                </div>
            </div>
        </div>
    }
</div>


